mixin aside()
	// start aside
	+b.aside
		+e.BUTTON.btn--js.btn.btn-block.btn-primary.btn-lg.d-lg-none(type="button") Меню личного кабинета
		+e.nav--js.d-lg-block
			+e.item.small: +e.A.link--active(href="#") Профиль
			+e.item.small: +e.A.link(href="#") Мои заказы
			+e.item.small: +e.A.link(href="#") Избранное
	// end aside

mixin aside-06()
	// start aside
	+b.aside
		+e.BUTTON.btn--js.btn.btn-block.btn-info.d-lg-none.ttu(type="button") Фильтр товаров
		+b.aside-filter--js.d-lg-block
			+e.main-title.h4 Подобрать товар
			+e.A.reset.text-primary.small(href="#")
				+icon('close')
				| Сбросить фильтр
			mixin group(t)
				+e.group.hover-block&attributes(attributes)
					+e.title.small.showhide&attributes(attributes)= t
					.showhide-all
						block
				// +e.group
			+group('Цена, р')(class="active")
				+e.rang-wrap.slider-rang-wrap
					.row
						.col-auto
							+e.LABEL.input-wrap
								+e.input.__input-minus.input-slider-range
									input.minus(type='text' value="1" )
						.col-auto
							+e.LABEL.input-wrap
								+e.input.__input-plus.input-slider-range

									input.plus(type='text' value="1000" )
					+e.range--1.slider-range.filter__
						input.range-slider(type="text"  )
			+group('Объем')
				+e.rang-wrap.slider-rang-wrap
					.row
						.col-auto
							+e.LABEL.input-wrap
								+e.input.__input-minus.input-slider-range
									input.minus(type='text' value="1" )
						.col-auto
							+e.LABEL.input-wrap
								+e.input.__input-plus.input-slider-range

									input.plus(type='text' value="1000" )
					+e.range--1.slider-range.filter__
						input.range-slider(type="text"  )
			+group('Тип продукта')
				div
					+in-ch(class="aside-popover-toggle" data-toggle="popover"   data-content="Показать 25 товаров")
						+e.SPAN.text Молочко
				div: +in-ch()
					+e.SPAN.text Набор
				div: +in-ch()
					+e.SPAN.text Спрей
				div: +in-ch()
					+e.SPAN.text Шампунь
			+group('Бренд')
				div: +in-ch()
					+e.SPAN.text 	A-DERMA

				div: +in-ch()
					+e.SPAN.text AHAVA

				div: +in-ch()
					+e.SPAN.text AMERICAN CREW

				div: +in-ch()
					+e.SPAN.text ARAVIA PROFESSIONAL

				div: +in-ch()
					+e.SPAN.text AVENE

				div: +in-ch()
					+e.SPAN.text BATISTE

				div: +in-ch()
					+e.SPAN.text Be Hair

				div: +in-ch()
					+e.SPAN.text BIODERMA

			+group('Применение')
				div: +in-ch()
					+e.SPAN.text 	A-DERMA

				div: +in-ch()
					+e.SPAN.text AHAVA
		//- +in-ch("Avene")
	// end aside

mixin aside-config()
	+b.aside-config
		+e.search-wrapper
			+e.INPUT.search(type='text' placeholder='Производитель или модель усилителя')
			+e.A.search-link(href='#')
				+icon('search')
		+e.reinforce-list
				+e.reinforce-item
					.row
						.col-4
							a(href='img/reinforce-img.png' data-fancybox-img="images" tabindex="-1")
								+e.reinforce-img(src='img/reinforce-img.png' width='112')
						.col-8
							+e.reinforce-title Мицар-ЭЭГ-03/35-201
							+e.reinforce-description Если нужно, краткое описание для раскрытия информации
					+e.reinforce-btn-del
		+e.callback.text-gay Не нашли свой усилитель?  Свяжитесь, пожалуйста, с нами: +7 499 404-31-41,
			a.text-primary(href='mailto:shop@mcscap.ru') shop@mcscap.ru
			| или
			a.text-primary.popup-with-move-anim(href='#modal-call-back') по форме обратной связи




